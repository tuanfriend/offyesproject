<head>
   <link rel="stylesheet" type="text/css" href="~/css/resultpage.css">
</head>


<div class="container-login100">

    <div id="box">
    <img id="fireworks" src="~/images/fireworks.gif" alt="IMG">
        <h1>Final Results!</h1>
        <img id="fireworks" src="~/images/fireworks.gif" alt="IMG">
        <table class="table">
            <tr>
                <th>Ranking</th>
                <th>Player</th>
                <th>Player Score</th>
            </tr>
            @{
            int count = 1;
            @foreach (var item in ViewBag.Userplay)
            {
                <tr>
                    @if(count == 1){
                        <td><img style="width: 32px;" src="~/images/top1.png"></td>
                    }else if(count == 2){
                        <td><img style="width: 32px;" src="~/images/top2.png"></td>
                    }else if(count == 3){
                        <td><img style="width: 32px;" src="~/images/top3.png"></td>
                    }else{
                        <td>@count</td>
                    }
                
                <td>@item.User.NickName</td>
                <td>@item.TotalScore</td>
            </tr>
            count++;
            }
            }
        </table>

        <a href="/logout"><button class="btn btn-primary">End Game</button></a>
    </div>

</div>